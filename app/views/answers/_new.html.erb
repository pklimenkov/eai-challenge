<div class="answer">
  <div class="form">
    <hr>
    <%= form_for @question.answers.new do |f| %>
      <span><%= I18n.t('questions.fields.description') %></span>
      <br>
      <%= f.text_area :text, size: "60x12" %>
      <%= f.hidden_field :question_id, value: @question.id %>
      <br>
      <%= f.submit I18n.t('questions.submit') %>
    <% end %>
  </div>
</div>